# run LVB
$lvb = $ENV{LVB_EXECUTABLE};
$output = `"$lvb"`;
$status = $?;

# check output
if ($status == 0)
{
    if ($output =~
	/ parsimonious trees of length 9 written to file \'outtree\'/)
    {
	print "test passed\n";
    }
    else
    {
	print "test failed\n";
    }
}
else
{
    print "test failed\n";
}

unlink "outtree";
